# AI Manager Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control!

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Supabase Database Configuration (Optional - for persistent storage)
SUPABASE_DB_URL=postgresql://username:password@host:port/database
SUPABASE_PASSWORD=your-supabase-password-here

# System Configuration
DEBUG=false
LOG_LEVEL=INFO
API_PORT=5000
WEB_PORT=8000

# Agent Configuration
MESSAGE_CHECK_INTERVAL=30
HEARTBEAT_INTERVAL=60
MAX_RETRIES=3

# Security
SECRET_KEY=your-secret-key-for-sessions
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: External Services
# OPENAI_API_KEY=your-openai-key-if-needed
# HUGGINGFACE_API_KEY=your-huggingface-key-if-needed
